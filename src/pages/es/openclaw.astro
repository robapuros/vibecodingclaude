  description: 'Guía completa para instalar y configurar OpenClaw, el asistente de IA autónomo de código abierto, en un VPS económico con Claude Pro.',
  inLanguage: 'es',
  totalTime: 'PT45M',
  tool: [
    { '@type': 'HowToTool', name: 'OpenClaw' },
